generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model groups {
  id   Int     @id @default(autoincrement())
  name String?
}

model products {
  id          Int     @id @default(autoincrement())
  description String?
  name        String?
  price       Float?
  slug        String?
  photoUrl    String?
  qtdStock    Int?
  groupId     Int?
  group       groups?  @relation(fields: [groupId], references: [id])
}

model orders {
  id              Int    @id @default(autoincrement())
  quantity        Int?
  freightPrice    Float?
  orderProducts   orderProducts[]
}

model orderProducts {
  id  Int @id @default(autoincrement())
  productId Int
  orderId Int
  order orders @relation(fields: [orderId], references: [id])
  product products @relation(fields: [productId], references: [id])
}
